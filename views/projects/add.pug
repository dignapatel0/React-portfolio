extends ../common/layout 

block layout-content 
    h2.text-center.my-4 Add a Project 

    form(action="/projects/add/submit", method="POST", class="project-form")
        .form-group
            label(for="name") Name: 
            input.form-control(type="text" id="name" name="name" placeholder="JS/XML Project")

        .form-group
            label(for="status") Status: 
            input.form-control(type="text" id="status" name="status" placeholder="Planned")

        .form-group
            label(for="timespan") TimeSpan: 
            input.form-control(type="text" id="timespan" name="timespan" placeholder="March 2025 - Present")

        .form-group
            label(for="technology") Technologies Used:
            input.form-control(type="text" id="technology" name="technology" placeholder="HTML, CSS, JavaScript")

        .form-group
            label(for="summary") Summary: 
            textarea.form-control(id="summary" name="summary" rows="3" placeholder="Project Description")

        button.btn.btn-orange(type="submit") Add Project
